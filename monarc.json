{
  "variables": {
    "cpus": "2",
    "disk_size": "50000",
    "hostname": "monarc-vm",
    "latest_commit": "{{env `LATEST_COMMIT`}}",
    "memory": "4096",
    "ssh_fullname": "ubuntu",
    "ssh_name": "ubuntu",
    "ssh_pass": "ubuntu",
    "vm_description": "MONARC - Method for an Optimised aNAlysis of Risks by CASES.",
    "vm_name": "MONARC",
    "vm_version": "{{env `MONARC_VERSION`}}",
    "vram": "32"
  },
  "builders": [
    {
      "name": "ubuntu-2004",
      "type": "virtualbox-iso",
      "format": "ova",
      "guest_os_type": "Ubuntu_64",
      "hard_drive_interface": "sata",

      "boot_command": [
         "<esc><esc><esc>",
         "<enter><wait>",
         "/casper/vmlinuz ",
         "root=/dev/sr0 ",
         "initrd=/casper/initrd ",
         "autoinstall ",
         "ds=nocloud-net;s=http://{{ .HTTPIP }}:{{ .HTTPPort }}/",
         "<enter>"
      ],

     "http_directory": "http",
     "http_port_max": 9011,
     "http_port_min": 9001,

      "disk_size": "{{user `disk_size`}}",
      "export_opts": [
        "--manifest",
        "--vsys",
        "0",
        "--eulafile",
        "/tmp/LICENSE-MONARC",
        "--description",
        "{{user `vm_description`}}",
        "--version",
        "{{user `vm_version`}}"
      ],

      "iso_url": "https://releases.ubuntu.com/focal/ubuntu-20.04.2-live-server-amd64.iso",
      "iso_checksum": "sha256:d1f2bf834bbe9bb43faf16f9be992a6f3935e65be0edece1dee2aa6eb1767423",

      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_pty": "true",
      "ssh_timeout": "20m",
      "ssh_username": "{{user `ssh_name`}}",

      "shutdown_command": "echo {{ user `ssh_pass` }} | sudo -S shutdown -P now",

      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--vram", "{{user `vram`}}"],
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
      ]
  }],
  "provisioners": [
    {
      "execute_command": "echo '{{user `ssh_pass`}}' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "pause_before": "10s",
      "script": "scripts/bootstrap.sh",
      "type": "shell"
    }
  ],
  "post-processors": [
    {
      "checksum_types": [
        "sha1",
        "sha512"
      ],
      "type": "checksum"
    }
  ]
}
